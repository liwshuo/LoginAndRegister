<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- enable overlap of transitions -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorPrimary">@color/primary_text</item>
        <item name="textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="icon">@color/icons</item>
        <item name="textColorError">@color/red</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>
</resources>